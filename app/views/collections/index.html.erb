<p id="notice"><%= notice %></p>

<h1>Collections</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th># Videos</th>
      <th># Channels</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= link_to collection.title, collection %></td>
        <td><%= collection.description %></td>
        <td><%= collection.videos.count %></td>
        <td><%= collection.channels.count %></td>
        <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
        <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Export', collection_export_path(collection) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

